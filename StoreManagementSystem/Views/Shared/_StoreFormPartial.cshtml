@model StoreAddFormModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <div class="card-body">
                <div class="text-center mb-3">
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="Description">Description</label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder=""></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="ImageUrl">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="">
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="ProvinceId">Province</label>
                    <select asp-for="ProvinceId" class="form-control">
                        <option value="">Select a province...</option>
                        @foreach (var province in Model.Provinces)
                        {
                            <option value="@province.Id">@province.Title</option>
                        }
                    </select>
                    <span asp-validation-for="ProvinceId" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="CityId">City</label>
                    <select asp-for="CityId" class="form-control">
                        <option value="">Select a city...</option>
                        @foreach (var city in Model.Cities)
                        {
                            <option value="@city.Id">@city.Title</option>
                        }
                    </select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

