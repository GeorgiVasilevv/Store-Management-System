@model ProductDeleteDetailsViewModel
@{
    ViewBag.Title = "Delete Product";
}

<style>
    .fixed-image {
        width: 460px;
        height: 300px;
        object-fit: cover;
        border: 3px solid gray;
    }
</style>
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form method="post" asp-action="Delete" asp-route-storeId="@Model.StoreId" asp-controller="Product">
    <div class="card-body">
        <div class="form-group mb-2">
            <img class="card-img-top fixed-image mx-auto d-block" src="@Model.ImageUrl" alt="Store Image">
        </div>
        <div class="form-group mb-2">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" disabled="disabled" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" disabled="disabled" />
        </div>
        <div class="form-group mb-2">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" disabled="disabled" value="@Model.Price" />
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </div>
</form>
